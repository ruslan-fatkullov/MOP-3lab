; Макрос вывода строки LINE 
PUTL    MACRO LINE
	push ecx
	push eax
        LEA   SI,   LINE
	XOR   CX,   CX
	XOR   DX,   DX
	XOR   AX,   AX	
        CALL  PUTSS
	pop eax
	pop ecx
        ENDM
		
PUTLS   MACRO LINE
	PUSH	SI
	PUSH	AX
	XOR   AX,   AX	
    LEA   SI,   LINE
    CALL  PUTSS
	POP	AX
	POP	SI
ENDM

